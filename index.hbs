{{!< default}}

<main class="site-main">
    <div class="gh-outer home-cover">
        <section class="gh-inner">
            <h2 class="cover-heading">The Swift conference in Downtown Toronto is back!</h2>
            <h2 class="cover-subheading">August 10/11th 2023 <br />@ TIFF Bell Lightbox</h2>
            <a class="tickets-button" href="#tickets">Get Your Tickets</a>
        </section>
    </div>

    <!-- Conference Features -->
    <div class="gh-outer">
        <section class="features-wrapper gh-inner">
                {{#get "posts" filter="tags:feature" order="published_at asc"}}
                    {{#foreach posts}}
                    <article class="{{post_class}}">
                        <h4 class="post-title">{{title}}</h3>
                        <p>{{content}}</p>
                    </article>
                    {{/foreach}}
                {{/get}}
        </section>
    </div>

    <hr />

  <!-- Organizers -->
    <div class="gh-outer">
        <section class="gh-inner">
            <h3 class="post-title">Speakers</h3>
            <div class="featured-people">
                {{#get "posts" filter="tags:speaker" order="published_at asc"}}
                {{#foreach posts}}
                <div class="featured-person">
                    {{#if feature_image}}
                        <img
                            class="profile-picture"
                            src="{{img_url feature_image size="m"}}"
                            alt="{{title}}"
                            loading="lazy"
                        >
                    {{/if}}
                    <h4 class="person-title">{{title}}</h3>
                    <p>{{content}}</p>
                </div>
                {{/foreach}}
                {{/get}}
            </div> 
        </section>
    </div>

<hr />


    <!-- Ticket Checkout -->
    <div id="tickets" class="gh-outer">
        <section class="gh-inner section-wrapper" id="sign-up">
            <div class="container" style ="width: 100%;">
                <div id="eventbrite-widget-container-492122691217"></div>
                    <script src="https://www.eventbrite.ca/static/widgets/eb_widgets.js"></script>
                    <script type="text/javascript">
                        var callback = function () {
                            console.log('Order complete!');
                        };

                        window.EBWidgets.createWidget({
                            // Required
                            widgetType: 'checkout',
                            eventId: '492122691217',
                            iframeContainerId: 'eventbrite-widget-container-492122691217',

                            // Optional
                            iframeContainerHeight: 670,  // Widget height in pixels. Defaults to a minimum of 425px if not provided
                            onOrderComplete: callback  // Method called when an order has successfully completed
                        });
                    </script>
            </div>
        </section>
    </div>

    <hr />

