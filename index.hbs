    <!-- Email Sign Up -->
    <div class="gh-outer">
        <section class="gh-inner section-wrapper" id="sign-up">
            <h3>Latest Updates</h3>

            <div class="blog-entries">
                {{#get "posts" filter="tags:blog" order="published_at asc"}}
                    {{#foreach posts}}
                    <div class="blog-entry">
                        <h4 class="post-title">{{title}}</h3>
                        <p>{{excerpt}}</p>
                        <a class="read-more" href="{{url}}">Read More</a>
                    </div>
                    {{/foreach}}
                {{/get}}
            </div>

            <div class="container">
                <h3 class="conference-sign-up post-title">Subscribe to our newsletter:</h3>
                <link href="//cdn-images.mailchimp.com/embedcode/slim-10_7.css" rel="stylesheet" type="text/css">
                <div class="email-signup">
                    <form id="mc-embedded-subscribe-form"
                        action="https://swiftconf.us20.list-manage.com/subscribe/post?u=e1881a1d2f2758bcf9d253219&amp;amp;id=6747d0e9c4"
                        method="post" name="mc-embedded-subscribe-form" target="_blank" novalidate="">
                        <div id="mc_embed_signup_scroll"><input class="email" id="mce-EMAIL" type="email" value="" name="EMAIL"
                                placeholder="email address" required="">
                            <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text"
                                    name="b_e1881a1d2f2758bcf9d253219_6747d0e9c4" tabindex="-1" value=""></div>
                            <div class="clear"><input class="button" id="mc-embedded-subscribe" type="submit" value="Sign Up"
                                    name="notify"></div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>

    <hr />

    <!-- Organizers -->
    <div class="gh-outer">
        <section class="gh-inner">
            <h3 class="post-title">Organizers</h3>
            <div class="featured-people">
                {{#get "posts" filter="tags:organizer" order="published_at asc"}}
                {{#foreach posts}}
                <div class="featured-person">
                    {{#if feature_image}}
                        <img
                            class="profile-picture"
                            src="{{img_url feature_image size="m"}}"
                            alt="{{title}}"
                            loading="lazy"
                        >
                    {{/if}}
                    <h4 class="person-title">{{title}}</h3>
                    <p>{{content}}</p>
                </div>
                {{/foreach}}
                {{/get}}
            </div> 
        </section>
    </div>

    <hr />

    <!-- COC -->
    <div class="gh-outer">
        <section class="gh-inner section-wrapper">
                {{#get "pages" filter="tags:code-of-conduct"}}
                    {{#foreach pages}}
                    <article class="{{post_class}}">
                        <h3 class="post-title">{{title}}</h3>
                        <p>{{content}}</p>
                    </article>
                    {{/foreach}}
                {{/get}}
        </section>
    </div>


</main>

