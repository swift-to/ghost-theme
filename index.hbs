{{!< default}}

<main class="site-main">
    <div class="gh-outer">
        <section class="gh-inner">
            <h2>August 10/11th 2023 @ TIFF Bell Lightbox</h2>
            <img style="display:block; margin: 20px auto 20px;" src="/assets/images/cinema-1-small.jpg" />
        </section>
    </div>

    <!-- Conference Features -->
    <div class="gh-outer">
        <section class="features-wrapper gh-inner">
                {{#get "posts" filter="tags:Feature" order="published_at asc"}}
                    {{#foreach posts}}
                    <article class="{{post_class}}">
                        <h3 class="post-title">{{title}}</h3>
                        <p>{{content}}</p>
                    </article>
                    {{/foreach}}
                {{/get}}
        </section>
    </div>

    <hr />

    <!-- Ticket Checkout -->
    <div class="gh-outer">
        <section class="gh-inner section-wrapper" id="sign-up">
            <div class="container">
                <div id="eventbrite-widget-container-492122691217"></div>
                    <script src="https://www.eventbrite.ca/static/widgets/eb_widgets.js"></script>
                    <script type="text/javascript">
                        var callback = function () {
                            console.log('Order complete!');
                        };

                        window.EBWidgets.createWidget({
                            // Required
                            widgetType: 'checkout',
                            eventId: '492122691217',
                            iframeContainerId: 'eventbrite-widget-container-492122691217',

                            // Optional
                            iframeContainerHeight: 600,  // Widget height in pixels. Defaults to a minimum of 425px if not provided
                            onOrderComplete: callback  // Method called when an order has successfully completed
                        });
                    </script>
            </div>
        </section>
    </div>

    <!-- CFP -->
    <div class="gh-outer">
        <section class="organizer-wrapper gh-inner">
                <h3 class="post-title">Calling All Speakers!!!</h3>
                <a href="https://forms.gle/hYCoi6x7ZmwLT3WH6">Submit Talk Propsal(s)</a>
        </section>
    </div>

    <!-- Email Sign Up -->
    <div class="gh-outer">
        <section class="gh-inner section-wrapper" id="sign-up">
            <div class="container">
                <h3 class="conference-sign-up post-title">Sign-up to be notified of any updates</h3>
                <link href="//cdn-images.mailchimp.com/embedcode/slim-10_7.css" rel="stylesheet" type="text/css">
                <div id="mc_embed_signup">
                    <form class="validate" id="mc-embedded-subscribe-form"
                        action="https://swiftconf.us20.list-manage.com/subscribe/post?u=e1881a1d2f2758bcf9d253219&amp;amp;id=6747d0e9c4"
                        method="post" name="mc-embedded-subscribe-form" target="_blank" novalidate="">
                        <div id="mc_embed_signup_scroll"><input class="email" id="mce-EMAIL" type="email" value="" name="EMAIL"
                                placeholder="email address" required="">
                            <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text"
                                    name="b_e1881a1d2f2758bcf9d253219_6747d0e9c4" tabindex="-1" value=""></div>
                            <div class="clear"><input class="button" id="mc-embedded-subscribe" type="submit" value="Sign Me Up"
                                    name="notify"></div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>

    <hr />

    <!-- Organizers -->
    <div class="gh-outer">
        <section class="organizer-wrapper gh-inner">
                <h3 class="post-title">Organizers</h3>
                {{#get "posts" filter="tags:Organizer" order="published_at asc"}}
                    {{#foreach posts}}
                    <article class="{{post_class}}">
                            <div class="u-placeholder horizontal">
                                {{#if feature_image}}
                                    <img
                                        class="u-object-fit"
                                        srcset="{{> "srcset"}}"
                                        sizes="(min-width: 1256px) calc((1130px - 60px) / 3), (min-width: 992px) calc((90vw - 60px) / 3), (min-width: 768px) calc((90vw - 30px) / 2), 90vw"
                                        src="{{img_url feature_image size="m"}}"
                                        alt="{{title}}"
                                        loading="lazy"
                                    >
                                {{/if}}
                            </div>
                        <h3 class="post-title">{{title}}</h3>
                        <p>{{content}}</p>
                    </article>
                    {{/foreach}}
                {{/get}}
        </section>
    </div>

    <hr />

    <!-- COC -->
    <div class="gh-outer">
        <section class="gh-inner section-wrapper">
                {{#get "pages" filter="tags:code-of-conduct"}}
                    {{#foreach pages}}
                    <article class="{{post_class}}">
                        <h3 class="post-title">{{title}}</h3>
                        <p>{{content}}</p>
                    </article>
                    {{/foreach}}
                {{/get}}
        </section>
    </div>


</main>

{{#contentFor "body_class"}}{{#if @site.cover_image}} with-full-cover is-head-transparent{{/if}}{{#if @member}} logged-in{{/if}}{{/contentFor}}